<p id="notice"><%= notice %></p>

<div class="outsideborder">
  <div class="content">
    <div class="event-details">
      <div class="event-title">
        <h1><%= @event.title %></h1>
      </div>
      <div class="date-label">
        <h3>Date:</h3>
      </div>
      <div class="date">
        <h3><%= @event.date.strftime("%A, %b %d") %> at <%= @event.time.strftime("%l:%m %p") %></h3>
      </div>
      <div class="place-label">
        <h3>Place:</h3>
      </div>
      <div class="street-address">
        <h3><%= @event.street_address %><h3>
      </div>
      <div class="city-zip">
        <h3><%= @event.city %>, <%= @event.state %> <%= @event.zip %></h3>
      </div>
      <div class="description">
         <%= simple_format @event.description %>

      </div>
      <a href="https://coinbase.com/checkouts/f8e9180f240eaee258ebf636fa1768bf" target="_blank"><button>Buy a Ticket!</button></a>
    </div>


  </div>

</div>





